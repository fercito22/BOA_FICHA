


<div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabeleditarcomunicacion">Formulario Formacion Academica</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      
      <div class="modal-body">
            <form>
                <div class="form-group">          
                    <p>{{formp.ComunicacionNombre}}</p>
                    <div class="input-group-prepend">
                        <div class="input-group-text"><i class="fa fa-id-card text-info"></i></div>               
                            {{input
                                value= formcomu.Valor
                                placeholder="Titulo"
                                autocomplete='off'
                                class="form-control text-secondary border border-info "
                            }}                 
                    </div>   
                    <label hidden={{tituloValido}} class="errorMessage mensaje-error is-valid">{{mensajeErrorTexto}}</label>              
                </div>                 
            </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <button type="button" class="btn btn-primary" {{action 'onGuardarComunicacion'}} data-dismiss="modal">Guardar</button>
      </div>
    </div>
  </div>