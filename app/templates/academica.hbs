===========================================-->


    <div class="container">
        <!-- SECTION TITLE -->
        
        <div class="section-title">
            <h4 class="text-uppercase text-center"><i class="title-icon fa fa-suitcase"></i>Formacion Academica</h4>
        </div>
        
        {{!-- <button id="botonEditar" type="button" style="float:right; margin-right: 1%; margin-block-start: -1%; " class="btn" data-toggle="modal" data-target="#exampleModalAgregar">
            {{fa-icon 'user-edit'}} Agregar Titulo
        </button> --}}

        <div class="section-title">
            <button onclick={{action "nuevoTitulo"}} id="botonEditar" type="button" style="float:right; margin-right: 1%; margin-block-start: -1%; " class="btn" data-toggle="modal" data-target="#exampleModalAgregar">
                {{fa-icon 'user-edit'}} Nuevo
            </button>
        </div>
        <br>  
        <hr id="linea2">

        <div id="timeline-experience">
                {{#each webapidataF as |item|}} 
                <!-- FIRST TIMELINE -->
                <div class="timeline-block">
                    <!-- Circulo con la primer Letra  -->
                    {{!-- <div class="timeline-dot"><h6>Letra</h6></div> --}}
                
                    <!-- TIMELINE CONTENT -->
                    <div class="card timeline-content">
                        <div class="card-content">
                           
                            <!-- TIMELINE TITLE -->                            
                            <h5 class="text-uppercase">Grado Formacion: {{item.GradoFormacion}}</h5>
                            <hr id="linea2">

                            <!-- TIMELINE TITLE INFO -->
                            <div class="timeline-info">                                                                                     
                                                                
                                <h6>
                                    Titulo: <small>{{item.titulo}}</small>
                                </h6>
                                <h6>
                                    Institucion: <small>{{item.institucion}}</small>
                                </h6>
                                <h6>
                                    Fecha Inicio: <small>{{item.fechainicio}}</small>
                                </h6>
                                <h6>
                                    Fecha Fin: <small>{{item.fechafin}}</small>
                                </h6>                                
                            </div>
                            
                            {{!-- <a href="#" class="modal-dot" data-toggle="modal" data-target="#myModal-4">
                                <i class="fa fa-ellipsis-h" aria-hidden="true"></i>
                            </a> --}}

                            <button onclick={{action "idEditarTitulo" item}} id="botonEditar" type="button" style="float:right; margin-right: 1%; margin-block-start: -1%; " class="btn" data-toggle="modal" data-target="#exampleModaleditarTitulo">
                                {{fa-icon 'user-edit'}}
                            </button>
                            <button onclick={{action "idEliminar" item}} id="botonEditar" style="float:right; margin-right: 1%; margin-block-start: -1%; " class="btn" >
                                {{fa-icon 'trash'}}
                            </button>  
                        </div>
                    </div>
                </div>
                {{/each}}                              
        </div>
    </div>


<div class="modal fade" id="exampleModaleditarTitulo" tabindex="-1" role="dialog" aria-labelledby="exampleModalTitulo" aria-hidden="true">
    <div class="modal-dialog" role="document">
         {{partial 'formulario-formacionedit'}}
    </div>
</div>


<div class="modal fade" id="exampleModalAgregar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabelAgregar" aria-hidden="true">
    <div class="modal-dialog" role="document">
         {{partial 'agregar-titulo'}}
    </div>
</div>